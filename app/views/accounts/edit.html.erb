<div class="my-sm-3">
  <%= link_to '< Back to Accounts', accounts_path %>
</div>

<%= form_for(@account) do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :type %>
    <%= f.select :type, Account::TYPES, { include_blank: true }, { class: 'form-control' } %>
  </div>

  <div class="form-group">
    <%= f.label :default_allocation %>
    <%= f.select :default_allocation, Account::ALLOCATIONS, { include_blank: true }, { class: 'form-control' } %>
  </div>

  <%= f.submit 'Update', class: 'btn btn-primary' %>
<% end %>
